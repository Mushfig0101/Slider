    </section>

    <section id="services">
        <div class="container">

            <div class="row align-items-center justify-content-center text-center">
                <div class="services">
                    <h2>@Model.Description.ElementAt(2).UpTitle</h2>
                    <hr>
                    <span>
                      @Model.Description.ElementAt(2).DownTitle
                    </span>
                </div>
            </div>
            <div class="row flex-wrap-wrap mt-5">
                @foreach (var service in Model.Service)
                {
                    <div class="col-md-4">
                        <div class="keep" data-aos="fade-up">
                            <div class="icon">
                                <a href="#">
                                    <i class="@service.Icon"></i>
                                    <div class="cicle"></div>
                                </a>
                            </div>
                            <div class="keep_content">
                                <h3>@service.Title</h3>
                                <p>
                                   @service.Content
                                </p>
                            </div>
                        </div>
                    </div>


                }


            </div>
        </div>
    </section>
