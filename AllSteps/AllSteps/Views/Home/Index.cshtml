    <section id="cards">
        <div class="container">
            <div class="row">
                <div class="col-md-12 marg">
                    <h2>@Model.Description.ElementAt(3).UpTitle </h2>
                    <span>
                       @Model.Description.ElementAt(3).DownTitle
                    </span>
                </div>
            </div>
            <div class="row justify-content-center align-items-center mt-5">
                @foreach (var blog in Model.Blog)
                {
                    <div class="col-md-4">
                        <div class="hold">
                            <div class="cards_img">
                                <a>
                                    <img src="~/img/cards_img/@blog.Image">

                                </a>
                                <span><a href="#">@blog.LifeStyle</a></span>
                            </div>

                            <div class="cards_content">
                                <span>Jan 21, 2017</span>
                                <span>33 Comments</span>
                                <a href="#">
                                    <h2>@blog.Title</h2>
                                </a>

                                <p>
                                    @blog.Description
                                </p>
                                <a href="#">
                                    READ MORE
                                    <i class="fa fa-arrow-right"></i>
                                </a>


                            </div>
                        </div>

                    </div>
                }


            </div>
        </div>

    </section>
    <section id="clients">
        <div class="container">
            <div class="row">
                <div class="col-md-12 clientmarg">
                    <h2>@Model.Description.ElementAt(4).UpTitle</h2>
                    <p>@Model.Description.ElementAt(4).DownTitle</p>
                </div>
            </div>
        </div>





        <!-- Flickity HTML init -->



    </section>


    <section id="team">
        <div class="container">
            <div class="row">
                <div class="col-md-12 team">
                    <h2>@Model.Description.ElementAt(5).UpTitle </h2>

                    <p>
                       @Model.Description.ElementAt(5).DownTitle
                    </p>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="card-deck">

                        @foreach (var ourteam in Model.OurTeam)
                        {
                            <div class="card">
                                <img src="~/img/team/@ourteam.Image" class="card-img-top" alt="...">
                                <div class="card-body text-center card_some">
                                    <h5 class="card-title">@ourteam.Title </h5>
                                    <p class="card-text"><small class="text-muted">@ourteam.Smal</small></p>
                                    <p class="card-text">
                                       @ourteam.Description
                                    </p>
                                    <div class="smile">
                                        <a class="btn btn-xs btn-slide btn-light">
                                            <i class="fab fa-facebook-f"></i>
                                            <span>facebook</span>
                                        </a>

                                        <a class="btn btn-xs btn-slide btn-light">
                                            <i class="fab fa-twitter"></i>
                                            <span> twitter</span>
                                        </a>
                                        <a class="btn btn-xs btn-slide btn-light">
                                            <i class="fab fa-instagram"></i>
                                            <span> instagram</span>
                                        </a>
                                        <a class="btn btn-xs btn-slide btn-light">
                                            <i class="far fa-envelope"></i>
                                            <span>mail</span>
                                        </a>
                                    </div>

                                </div>
                            </div>
                         }
                    </div>
                </div>
            </div>
        </div>
    </section>

