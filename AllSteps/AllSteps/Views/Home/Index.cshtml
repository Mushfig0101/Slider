@model Enumarables
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}


<main>

    <section id="carusel">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="main-carousel">
                        @foreach (var slider in Model.Sliders)
                          {
                        <div id="slide-1" class="carousel-cell og" data-id="1">
                            @*<div class="bg" style="background: url('../img/pattern/@slider.Image')"></div>*@
                            <div class="bg" style="background: url('../img/@slider.Image')"></div>
                            <div class="text">
                                <h1>@slider.Title</h1>
                                <p>
                                    @slider.Description
                                </p>
                            </div>
                        </div>
                         }
                    </div>
                </div>

            </div>
        </div>

    </section>


    <section id="polo">
        <div class="container">
            <div class="row align-items-center justify-content-center text-center mb-5 ">
                <div class=" col-md-12 " data-aos="fade-up">
                    <h2>@Model.Welcome.First().Title</h2>
                    <hr>
                    <span>@Model.Welcome.First().Info</span>
                </div>
            </div>
            <div class="row h-100 align-items-center justify-content-start">
                <div class="col-md-12">
                    <div class="img" data-aos="fade-up">
                        <img src="~/img/index image/@Model.Welcome.First().Image">
                    </div>

                </div>
            </div>
        </div>
    </section>

    <div style="margin-bottom:30px"> </div>
    <section id="grey">
        <div class="container">
            <div class="row align-items-center justify-content-start">
                <div class="col-md-12">
                    <div class="title_content" data-aos="fade-up">
                        <h2>@Model.Description.ElementAt(0).UpTitle</h2>
                        <hr>
                        <span>
                           @Model.Description.ElementAt(0).DownTitle
                        </span>
                    </div>
                </div>
            </div>

            <div class="row align-items-center justify-content-center">

                @foreach (var work in Model.WhatWeDos)
                {
                    <div class="col-md-4">
                        <div class="animate" data-aos="fade-up">
                            <h4>@work.Title</h4>
                            <p>
                               @work.Description
                            </p>
                        </div>
                    </div>
                 }

            </div>

        </div>

    </section>

    <section id="recent_work mt-5 !important">
        <div class="container">
            <div class="row">
                <h2>@Model.Description.ElementAt(1).UpTitle</h2>

                <span>
                   @Model.Description.ElementAt(1).DownTitle
                </span>
            </div>
        </div>
    </section>

    <section id="imagescol">
